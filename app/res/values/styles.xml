<resources>

    <style name="DarkDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="LightDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>

    <style name="Widget_GifView"></style>

    <style name="NineKeybordButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/button_pd_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="NineKeybordButtonText">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">52dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NineKeybordImageItemStyleChannelOf_TEKSUN_PIXEL">
        <item name="android:height">150dp</item>
        <item name="android:layout_width">150dp</item>
    </style>

    <style name="NineKeybordImageItemStyle">
        <item name="android:height">200dp</item>
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="DarkWifiSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
        <item name="android:textSize">@dimen/wifi_item</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:track">@drawable/track</item>
    </style>

    <style name="LightWifiSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
        <item name="android:textSize">@dimen/wifi_item</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:track">@drawable/track</item>
    </style>

    <style name="DarkAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="LightAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

