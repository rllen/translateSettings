    <style name="CustomProgressBar_Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small_holo</item>
        <item name="android:minWidth">27dip</item>
        <item name="android:maxWidth">27dip</item>
        <item name="android:minHeight">27dip</item>
        <item name="android:maxHeight">27dip</item>
    </style>

    <color name="gray">#E5E5E5</color>

    <style name="TimePicker">
        <item name="timePickerMode">spinner</item>
        <item name="legacyLayout">@layout/time_picker_legacy</item>
    </style>

    <style name="DatePicker">
        <item name="spinnersShown">true</item>
        <item name="datePickerMode">spinner</item>
        <item name="legacyLayout">@layout/date_picker_legacy</item>
        <item name="calendarViewShown">false</item>
    </style>

    <style name="NumberPicker">
        <item name="internalLayout">@layout/number_picker</item>
    </style>

</resources>
