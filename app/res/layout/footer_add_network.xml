<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wifi_add_network"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="60dp"
    android:paddingLeft="?attr/wifi_item_marginLeft"
    android:paddingStart="?attr/wifi_item_marginLeft"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="?attr/wifi_item_marginRight"
        android:layout_marginRight="?attr/wifi_item_marginRight"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_menu_add_inset"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/wifi_add_network"
        android:textSize="@dimen/wifi_item_desc" />

</LinearLayout>
