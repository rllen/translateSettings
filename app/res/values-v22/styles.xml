<resources>

    <style name="DarkDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="LightDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@null</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="DarkWifiSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
        <item name="android:textSize">@dimen/wifi_item</item>
        <item name="android:paddingLeft">?attr/wifi_item_marginLeft</item>
        <item name="android:paddingRight">?attr/wifi_item_marginRight</item>
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:track">@drawable/track</item>
    </style>

    <style name="LightWifiSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
        <item name="android:textSize">@dimen/wifi_share</item>
        <item name="android:paddingLeft">?attr/wifi_item_marginLeft</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:track">@drawable/track</item>
    </style>



    <style name="LightButtonBarPositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/btn_colored_borderless_text_material</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LightButtonBarNegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/negative_btn_colored_borderless_text_material</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DarkAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/black</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="LightAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/LightButtonBarPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/LightButtonBarNegativeButton</item>
    </style>

