<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="@dimen/list_item_background_inset_left"
    android:insetRight="@dimen/list_item_background_inset_right"
    android:insetTop="@dimen/list_item_background_inset_top"
    android:insetBottom="@dimen/list_item_background_inset_bottom">

    <selector>
        <item android:drawable="@drawable/list_item_background_activated" android:state_activated="true" />
        <item android:drawable="@drawable/list_item_background_pressed" android:state_selected="true"/>
        <item android:drawable="@drawable/list_item_background_pressed" android:state_pressed="true" />
        <item android:drawable="@drawable/list_item_background_pressed" android:state_focused="true" />
        <item android:drawable="@drawable/list_item_background_normal"/>
    </selector>

</inset>